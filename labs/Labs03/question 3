#include <stdio.h>
#include <math.h>
int main()  {
	         int base = 0;
			 int height = 0;
			 printf("== calculating hypotenuse ==\n");
			 printf("input base:  ");
			 scanf("%d", &base);
			 printf("input height:  ");
			 scanf("%d", &height);
			 
			 printf("\n == Calculating hypotenuse == \n");
			 int hypotenuse = base*base + height*height;
			 float h = sqrt(hypotenuse);
			 printf("hypotenuse is: %f", h);
			 
			 return 0;		 
			
}
